Step 1
#Install virtualenv if you dont have it installed
    pip install virtualenv
    
	Step 2
#Install flask
    pip install flask
    
	Step 3
#Install Python3
    pip install python3

	Step 4
#Create a virtual environment
    virtualenv venv
    
	Step 5
#Activate the virtual environment 
#For Windows
    venv\Scripts\activate
    
#For macOS/Linux
    source venv/bin/activate
    
	Step 6
#Install requirements.txt
   pip install -r requirements.txt
   
   	Step 7
#Run and compile the frontend
personal-identity-security-system/src
   python3 app.py
   
   	Step 8
#start ganache 
   npx ganache --port 7545 --chain.networkId 5777
   truffle compile
   truffle migrate




